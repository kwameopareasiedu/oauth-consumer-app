{
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module",
		"ecmaFeatures": {
			"jsx": true,
			"experimentalObjectRestSpread": true
		}
	},
	"plugins": ["react"],
	"env": {
		"node": true,
		"es6": true,
		"mocha": true,
		"browser": true
	},
	"rules": {
		"no-console": "off",
		"semi": ["error", "always"],
		"handle-callback-err": "error",
		"react/jsx-uses-react": "error",
		"react/jsx-uses-vars": [2]
	},
	"globals": {
		"_services": false,
		"document": false,
		"localStorage": false
	}
}
